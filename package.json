{
    "name": "stderr-lib",
    "version": "2.0.0",
    "description": "Normalize unknown error values to a standard format with cause chain support.",
    "author": "Michael L. Hobbs",
    "homepage": "https://github.com/MichaelLeeHobbs/stderr#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MichaelLeeHobbs/stderr.git"
    },
    "bugs": {
        "url": "https://github.com/MichaelLeeHobbs/stderr/issues"
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "sideEffects": false,
    "publishConfig": {
        "access": "public",
        "audit-level": "high"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup",
        "build:watch": "tsup --watch",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "typecheck": "tsc --noEmit",
        "typecheck:test-types": "tsc --project test-types/tsconfig.json --noEmit",
        "clean": "rimraf dist coverage",
        "prepare": "husky",
        "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run lint:fix && pnpm run test:coverage",
        "version:major": "npm version major",
        "version:minor": "npm version minor",
        "version:patch": "npm version patch",
        "preversion": "pnpm run lint && pnpm run test:coverage",
        "postversion": "git push && git push --tags",
        "dry-run": "npm pack --dry-run"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.25.0",
        "@types/benchmark": "^2.1.5",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.1",
        "benchmark": "^2.1.4",
        "eslint": "^9.25.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.6",
        "fast-check": "^4.3.0",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.2.7",
        "prettier": "^3.5.3",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "tsd": "^0.33.0",
        "tsup": "^8.4.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.30.1"
    },
    "keywords": [
        "error",
        "errors",
        "normalize",
        "stderr",
        "exception",
        "cause",
        "aggregate-error",
        "error-handling",
        "typescript",
        "javascript"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=18"
    }
}
